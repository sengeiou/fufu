<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_44dp"
    android:background="@color/black">

    <TextView
        android:id="@+id/tv_cancel_qrcode"
        style="@style/Text_White_28"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_20dp"
        android:text="@string/cancel_Qrcode" />

    <TextView
        android:id="@+id/tv_title_qrcode"
        style="@style/Text_White_34"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:text="@string/title_Qrcode" />

</RelativeLayout>