<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/framelayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <org.apache.cordova.image.view.MyImageView
        android:id="@+id/child_image"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/margin_100dp"
        android:scaleType="fitXY"
        android:src="@drawable/friends_sends_pictures_no" />

    <CheckBox
        android:id="@+id/child_checkbox"
        android:layout_width="@dimen/margin_24dp"
        android:layout_height="@dimen/margin_24dp"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/margin_1dp"
        android:layout_marginTop="@dimen/margin_1dp"
        android:background="@drawable/pictures_select_icon"
        android:button="@null" />

</FrameLayout>